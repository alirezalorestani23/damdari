<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_farm_name"
        tools:text="ساعت" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_farm_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="تاریخ" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:textAppearance="@style/titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="برزین"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_farm_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/view_background"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="دامداری سعید اکرمی"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_middle_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_weigh_bridge_title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="باسکول"
        android:textAppearance="@style/titles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gl_middle_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_farm_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="36.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_middle_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_weigh_bridge_title" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_livestock_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="دام"
        android:textAppearance="@style/titles"
        app:layout_constraintEnd_toEndOf="@id/gl_middle_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_farm_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_plaque_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="پلاک 436"
        app:layout_constraintEnd_toEndOf="@id/gl_middle_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_livestock_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_livestock_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="35.9"
        app:layout_constraintEnd_toEndOf="@id/gl_middle_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_plaque_number" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_herd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/view_background"
        android:backgroundTint="@color/transparent_view_background"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="گله"
        app:layout_constraintTop_toBottomOf="@id/tv_livestock_num" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_number"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="تعداد"
        android:textAppearance="@style/titles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_middle_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_herd" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_number_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="36.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_middle_vertical"

        app:layout_constraintTop_toBottomOf="@id/tv_number" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_total"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="جمع کل"
        android:textAppearance="@style/titles"
        app:layout_constraintEnd_toEndOf="@id/gl_middle_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_herd" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_total_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="پلاک 436"
        app:layout_constraintEnd_toEndOf="@id/gl_middle_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_total" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/view_background"
        android:backgroundTint="@color/transparent_view_background"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="مقادیر"
        app:layout_constraintTop_toBottomOf="@id/tv_total_value" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="بیش ترین"
        android:textAppearance="@style/titles"
        app:layout_constraintEnd_toStartOf="@+id/tv_min"
        app:layout_constraintStart_toEndOf="@id/tv_average"
        app:layout_constraintTop_toBottomOf="@id/tv_divider" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_max_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="146.550"
        app:layout_constraintEnd_toEndOf="@id/tv_max"
        app:layout_constraintStart_toStartOf="@+id/tv_max"
        app:layout_constraintTop_toBottomOf="@id/tv_max" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="کم ترین"
        android:textAppearance="@style/titles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_max"
        app:layout_constraintTop_toBottomOf="@id/tv_divider" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_min_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="146.550"
        app:layout_constraintEnd_toEndOf="@+id/tv_min"
        app:layout_constraintStart_toStartOf="@+id/tv_min"
        app:layout_constraintTop_toBottomOf="@id/tv_min" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_average"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="متوسط"
        android:textAppearance="@style/titles"
        app:layout_constraintEnd_toStartOf="@id/tv_max"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_divider" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_average_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="146.550"
        app:layout_constraintEnd_toEndOf="@+id/tv_average"
        app:layout_constraintStart_toStartOf="@+id/tv_average"
        app:layout_constraintTop_toBottomOf="@id/tv_min" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_divider۲"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/view_background"
        android:backgroundTint="@color/transparent_view_background"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="خودکار"
        app:layout_constraintTop_toBottomOf="@id/tv_max_value" />



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_auto_pause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_divider۲"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_auto_play"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_pause"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_auto_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_divider۲"
        app:layout_constraintStart_toEndOf="@id/iv_auto_pause"
        app:layout_constraintEnd_toStartOf="@id/iv_auto_stop"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_play"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_auto_stop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_divider۲"
        app:layout_constraintStart_toEndOf="@id/iv_auto_play"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_stop"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_divider3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/view_background"
        android:backgroundTint="@color/transparent_view_background"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:text="دستی"
        app:layout_constraintTop_toBottomOf="@id/iv_auto_play" />



</androidx.constraintlayout.widget.ConstraintLayout>